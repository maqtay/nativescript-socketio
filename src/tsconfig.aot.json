{
    "compilerOptions": {
        "noEmitOnError": false,
        "noEmitHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "declaration": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "moduleResolution": "node"
    },
    "files": [
        "references.d.ts",
        "socketio.ios.ts",
        "socketio.android.ts",
        "socketio-common.ts",
        "angular/index.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}